{
  "manifest_version": 2,
  "name": "manaba Enhanced for Hitotsubashi",
  "version": "2.8.1",
  "description": "Make your manaba a little bit more comfortable",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "*:/manaba.hit-u.ac.jp/*"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://manaba.hit-u.ac.jp/*"],
      "run_at": "document_start",
      "js": ["contentScript.js"]
    }
  ],
  "commands": {
    "manaba-enhanced:open-in-respon": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Open selected Respon code in Respon"
    }
  }
}
